<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns="catmint-route-xsd" targetNamespace="catmint-route-xsd"
           xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="route">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="logic-name" maxOccurs="unbounded">
                    <xs:annotation>
                        <xs:documentation>逻辑库名称</xs:documentation>
                    </xs:annotation>
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="master">
                                <xs:annotation>
                                    <xs:documentation>主库ip</xs:documentation>
                                </xs:annotation>
                                <xs:complexType>
                                    <xs:attribute name="ip" type="xs:string" use="required" />
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="slaves" minOccurs="0">
                                <xs:annotation>
                                    <xs:documentation>从库ip</xs:documentation>
                                </xs:annotation>
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="slave" maxOccurs="unbounded" minOccurs="0">
                                            <xs:complexType>
                                                <xs:attribute name="ip" type="xs:string" use="required" />
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="name" type="xs:string" use="required" />
                        <xs:attribute name="dbname" type="xs:string" use="required" />
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>


