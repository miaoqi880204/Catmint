<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns="catmint-schema-xsd" targetNamespace="catmint-schema-xsd"
           xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="catmint-schema">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="schemas">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="schema" maxOccurs="unbounded" >
                                <xs:annotation>
                                    <xs:documentation>空间绑定实体库</xs:documentation>
                                </xs:annotation>
                                <xs:complexType>
                                    <xs:attribute name="name" type="xs:string" use="required">
                                        <xs:annotation>
                                            <xs:documentation>对应server.xml schema值</xs:documentation>
                                        </xs:annotation>
                                    </xs:attribute>
                                    <xs:attribute name="general-table" type="xs:boolean" use="required" default="true">
                                        <xs:annotation>
                                            <xs:documentation>是否开启整库所有表路由关系，true-开启</xs:documentation>
                                        </xs:annotation>
                                    </xs:attribute>
                                    <xs:attribute name="data-node" type="xs:string" use="required">
                                        <xs:annotation>
                                            <xs:documentation>多个node使用逗号分割</xs:documentation>
                                        </xs:annotation>
                                    </xs:attribute>
                                    <xs:attribute name="rule" type="xs:string" use="required">
                                        <xs:annotation>
                                            <xs:documentation>使用的路由规则</xs:documentation>
                                        </xs:annotation>
                                    </xs:attribute>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="data-nodes">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="data-node" maxOccurs="unbounded">
                                <xs:annotation>
                                    <xs:documentation>节点定义</xs:documentation>
                                </xs:annotation>
                                <xs:complexType>
                                    <xs:attribute name="name" type="xs:string" use="required" />
                                    <xs:attribute name="route" type="xs:string" use="required" />
                                    <xs:attribute name="database" type="xs:string" use="required">
                                        <xs:annotation>
                                            <xs:documentation>支持通配语法  shard*0-99</xs:documentation>
                                        </xs:annotation>
                                    </xs:attribute>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="rules">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="rule" maxOccurs="unbounded">
                                <xs:annotation>
                                    <xs:documentation>路由规则</xs:documentation>
                                </xs:annotation>
                                <xs:complexType>
                                    <xs:attribute name="name" type="xs:string" use="required" />
                                    <xs:attribute name="field" type="xs:string" use="required" />
                                    <xs:attribute name="type" type="xs:int" use="required">
                                        <xs:annotation>
                                            <xs:documentation>1-表字段值  2-时间区间  3-主键ID区间</xs:documentation>
                                        </xs:annotation>
                                    </xs:attribute>
                                    <xs:attribute name="value" type="xs:string"/>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="routes">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="route" maxOccurs="unbounded">
                                <xs:annotation>
                                    <xs:documentation>data-host</xs:documentation>
                                </xs:annotation>
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="master-host">
                                            <xs:annotation>
                                                <xs:documentation>写库url</xs:documentation>
                                            </xs:annotation>
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="slaves" minOccurs="0">
                                                        <xs:annotation>
                                                            <xs:documentation>读库url</xs:documentation>
                                                        </xs:annotation>
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="slave" maxOccurs="unbounded" minOccurs="0">
                                                                    <xs:complexType>
                                                                        <xs:attribute name="url" type="xs:string" use="required" />
                                                                        <xs:attribute name="read-proportion" type="xs:int" use="required">
                                                                            <xs:annotation>
                                                                                <xs:documentation>读请求优先级  数字越低优先级越高</xs:documentation>
                                                                            </xs:annotation>
                                                                        </xs:attribute>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                                <xs:attribute name="url" type="xs:string" use="required" />
                                                <xs:attribute name="read-proportion" type="xs:int" use="required">
                                                    <xs:annotation>
                                                        <xs:documentation>读请求优先级  数字越低优先级越高</xs:documentation>
                                                    </xs:annotation>
                                                </xs:attribute>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                    <xs:attribute name="name" type="xs:string" use="required" />
                                    <xs:attribute name="max-connection" type="xs:int" use="required" default="1000">
                                        <xs:annotation>
                                            <xs:documentation>与数据库最大连接数</xs:documentation>
                                        </xs:annotation>
                                    </xs:attribute>
                                    <xs:attribute name="min-connection" type="xs:int" use="required" default="1000" />
                                    <xs:attribute name="heart-beat" type="xs:string" use="required" default="select 1" >
                                        <xs:annotation>
                                            <xs:documentation>检测数据库心跳的语句</xs:documentation>
                                        </xs:annotation>
                                    </xs:attribute>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>


